        <!-- AdinPlay Ads -->
        <script>
            var aiptag = aiptag || {};
            aiptag.cmd = aiptag.cmd || [];
            aiptag.cmd.display = aiptag.cmd.display || [];
            aiptag.cmd.player = aiptag.cmd.player || [];

            aiptag.gdprShowConsentTool = true;
            aiptag.gdprConsentToolPosition = "bottom";
        </script>
    </head>
    <body>
        <div class="app">
            <div class="loading-splash row justify-content-center">
                <span class="logged-in">You are logged in as</span>
                <div class="loading-splash-col wall-of-fame-menu">
                    <h4 class="splash-header-title">Wall of Fame</h4>
                    <table class="wall-of-fame">
                        <tr>
                            <th>Rank</th>
                            <th>Player</th>
                            <th>Clan</th>
                            <th>Highscore</th>
                        </tr>
                    </table>
                    <button class="btn-btn-success btn-sm wof-show-more"><i class="icofont icofont-medal"></i> Show More</button>
                </div>
                <div class="loading-splash-col main-menu">
                    <div class="splash-warning-messages">
                        <small>Try <a href="https://relmz.io" target="_window">relmz.io</a></small>
                        <br>
                        <small class="disable-adblock-msg text-danger" style="display: none;">Please support Krew.io by disabling adblock.</small>
                    </div>
                    <div class="invite-used alert alert-success" role="alert" style="display: none;">Ahoy! It seems like you're using an invite link!</div>
                    <div class="select-server form-group">
                        <select name="server-list" id="server-list" class="custom-select form-control"></select>
                    </div>
                    <div class="select-spawn form-group">
                        <select name="spawn-selection" id="spawn-selection" class="custom-select form-control">
                            <option value="sea">Spawn in the Sea</option>
                            <option value="krew">Join a Random Krew</option>
                            <option value="spain">Spawn on Spain</option>
                            <option value="guinea">Spawn on Guinea</option>
                            <option value="brazil">Spawn on Brazil</option>
                            <option value="labrador">Spawn on Labrador</option>
                            <option value="island">Spawn on a Random Island</option>
                        </select>
                    </div>
                    <div class="play-menu form-group">
                        <button class="play-button btn btn-success btn-block" disabled>Loading...</button>
                        <button class="login-button btn btn-warning btn-block" disabled>Play with an account</button>
                        <button class="tutorial-button btn btn-primary btn-block" href="https://www.youtube.com/watch?v=kwAydeQL73s?autoplay=1&rel=0">Watch tutorial</button>
                    </div>

                    <!-- Tutorial popover -->
                    <script>
                        $(document).ready(function() {
                            $('.tutorial-button').magnificPopup({
                                focus: '',
                                disableOn: 700,
                                type: 'iframe',
                                mainClass: 'mfp-own',
                                removalDelay: 160,
                                preloader: false,
                                fixedContentPos: false
                            });
                        });
                    </script>

                    <div id="cpmstar_ad" style="position: relative; text-align: center; max-width: 50%;">
                        <script>
                            let cpmstar_rnd = Math.round(Math.random() * 999999);
                            let cpmstar_pid = 10016;
                            
                            let script = document.createElement('script');
                            script.innerHTML = '<script src="https://server.cpmstar.com/view.aspx?poolid=' + cpmstar_pid + '&script=1&rnd=' + cpmstar_rnd + '><\/script>';
                        </script>
                    </div>

                    <br>
                    <br>

                    <div class="social-buttons">
                        <a href="https://discord.krew.io/" target="_window"><img src="/assets/img/discord.jpg" alt="Discord link" class="rounded"></a>
                        <a href="https://www.reddit.com/r/krewio/" target="_window"><img src="/assets/img/reddit.jpg" alt="Reddit link" class="rounded"></a>
                        <a href="https://www.facebook.com/krewio/" target="_window"><img src="/assets/img/fb.jpg" alt="Facebook link" class="rounded"></a>
                        <a href="https://twitter.com/krewio" target="_window"><img src="/assets/img/twitter.jpg" alt="Twitter link" class="rounded"></a>
                    </div>

                    <br>
                    <br>

                    <small><a href="./tos.txt" target="_window">TOS & Privacy Policy</a></small>
                </div>
                <div class="loading-splash-col changelog-menu">
                    <h4 class="splash-header-title">Changelog</h4>
                    <small>Detailed information on <a href="https://discord.krew.io">Discord</a>.</small>
                    <small>You can view the entire changelog <a href="/changelog.txt">here</a>.</small>
                    <div id="krew-io_300x250">
                        <script>
                            aiptag.cmd.display.push(function() { aipDisplayTag.display('krew-io_300x250' )});
                        </script>
                    </div>
                    <div class="changelogs">
                        <article class="cl-article">
                            <h5 class="cl-title">Feature Update - December 15, 2020</h5>
                            <div class="cl-content">
                                <ul class="cl-contentlist">
                                    <li class="cl-new">Remade login.</li>
                                    <li class="cl-improvement">Revamped UI completely, along with major bug fixes.</li>
                                </ul>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
            <div id="loading-wheel">
                <img src="/assets/img/wheel.png" style="margin-top:10%" class="wheel">
                <div style="font-family: Caribbean; font-size:20px;">Loading...</div>
            </div>
            <div id="spyglass" style="display:none">
                <img src="/assets/img/spyglass_ocular.png" style="width: 100%; height: 100; position: absolute;">
            </div>
            <div class="game-ui">
                <div class="krew-info">
                    <div class="btn btn-secondary btn-sm float-sm-right toggle-settings-btn" data-tooltip="Open settings menu" data-tooltip-location="right"><i class="icofont icofont-options"></i></div>
                    <span class="ship-name">Your krew</span>
                    <div class="krew-stats">
                        <div class="text-danger">
                            <i class="icofont icofont-heart"></i>
                            <span class="ship-health">0 / 0</span>
                        </div>
                        <div class="text-primary">
                            <i class="icofont icofont-people"></i>
                            <span class="ship-krew">0 / 0</span>
                        </div>
                        <div class="text-warning">
                            <i class="icofont icofont-cube"></i>
                            <span class="ship-cargo">0 / 0</span>
                        </div>
                    </div>
                    <div class="krew-buttons">
                        <span class="btn btn-sm btn-success exit-island-btn" data-tooltip="Depart to sea with your ship" data-tooltip-location="right"><i class="icofont icofont-ship-wheel"></i> Sail</span>
                        <span class="btn btn-sm btn-primary invite-link-btn" data-tooltip="Invite friends to your krew" data-tooltip-location="bottom"><i class="icofont icofont-link"></i> Invite</span>
                        <span class="btn btn-sm btn-warning abandon-ship-btn" data-tooltip="Abandon the ship" data-tooltip-location="bottom"><i class="icofont icofont-anchor"></i> Abandon Ship</span>
                    </div>
                </div>

                <!-- Top Menu -->
                <div class="top-ui">
                    <ul>
                        <li class="btn btn-secondary disabled toggle-shop-menu-btn" data-tooltip-location="bottom"><i class="icofont icofont-shopping-cart"></i></li>
                        <li class="btn btn-secondary disabled toggle-krew-list-btn" data-tooltip="Join a krew" data-tooltip-location="bottom"><i class="icofont icofont-people"></i></li>
                        <li class="btn btn-secondary disabled toggle-bank-menu-btn"data-tooltip-location="bottom"><i class="icofont icofont-bank"></i></li>
                        <li class="gold-indicator">
                            <img src="./assets/img/gold.png" alt="Gold image">
                            <span class="text-warning current-gold">5000</span>
                        </li>
                        <li class="btn btn-secondary toggle-shop-menu-btn" data-tooltip="Hide / show the map" data-tooltip-location="bottom"><i class="icofont icofont-ui-map"></i></li>
                        <li class="btn btn-secondary toggle-krew-list-btn" data-tooltip="Show player and krew quests" data-tooltip-location="bottom"><i class="icofont icofont-book"></i></li>
                        <li class="btn btn-secondary disabled toggle-bank-menu-btn" data-tooltip="Show hotkeys" data-tooltip-location="bottom"><i class="icofont icofont-question"></i></li>
                    </ul>
                </div>

                <!-- Leaderboard -->
                <div class="leaderboard">
                    <div class="lb-logo">&nbsp;</div>
                    <table>
                        <thead>
                            <tr>
                                <th>Clan</th>
                                <th>Krew</th>
                                <th class="float-sm-right">0 boats</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr></tr>
                        </tbody>
                    </table>
                </div>

                <!-- Chat Menu -->
                <div class="chat-menu">
                    <div class="chat-tabs">
                        <ul class="nav nav-tabs">
                            <li class="nav-item"><a href="#" class="nav-link" id="toggle-clan-chat">Staff</a></li>
                            <li class="nav-item"><a href="#" class="nav-link" id="toggle-clan-chat">Clan</a></li>
                            <li class="nav-item"><a href="#" class="nav-link" id="toggle-local-chat">Local</a></li>
                            <li class="nav-item"><a href="#" class="nav-link active" id="toggle-global-chat">Global</a></li>
                        </ul>
                    </div>
                    <div class="chat-history"></div>
                    <label for="chat-input" class="t-hidden">Enter chat message</label>
                    <input type="text" id="chat-input" maxlength="32" placeholder="Enter chat message">
                    <div class="chat-buttons">
                        <div class="btn btn-sm btn-primary">Hide Chat</div>
                        <a href="https://discord.krew.io" class="btn btn-sm btn-success" target="_window">Discord</a>
                        <a href="https://krew-io.fandom.com/wiki/Krew.io_Wiki" class="btn btn-sm btn-warning" target="_window">Wiki</a>
                    </div>
                </div>

                <!-- Experience Bar -->
                <div class="experience-bar">
                    <div class="point-container">
                        <div class="exp-firerate">
                            <i class="icofont icofont-clock-time"></i>
                            <span>0</span>
                        </div>
                        <div class="exp-distance">
                            <i class="icofont icofont-dart"></i>
                            <span>0</span>
                        </div>
                        <div class="exp-damage">
                            <i class="icofont-fire-alt"></i>
                            <span>0</span>
                        </div>
                    </div>
                    <div class="point-name-container">
                        <span>Fire Rate</span>
                        <span>Distance</span>
                        <span>Damage</span>
                    </div>
                    <div class="exp-progress-bar"><div class="exp-progress-bar-inner"></div></div>
                    <div class="exp-level">Level 0</div>
                </div>

                <!-- Map -->
                <div class="map">
                    <canvas class="krew-map" id="krew-map"></canvas>
                </div>

                <!-- Menu Modals -->
                <div class="settings-menu modal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Krew Settings</h4>
                            <button class="btn btn-secondary btn-sm float-right toggle-settings-btn"><i class="icofont icofont-ui-close"></i></button>
                        </div>
                        <div class="modal-body">
                            <ul class="nav nav-tabs">
                                <li class="nav-item"><a href="#" class="nav-link active" id="ship-status">Ship Status</a></li>
                                <li class="nav-item"><a href="#" class="nav-link" id="clan-management">Clan Management</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="shop-menu modal">
                    <div class="island div">
                        <div class="modal-header">
                            <h4 class="modal-title">Welcome to <b><span class="port-name">Spain</span></b>!</h4>
                            <button class="btn btn-secondary float-right btn-sm toggle-shop-btn"></button>
                        </div>
                        <div class="modal-body">
                            <ul class="nav nav-tabs">
                                <li class="nav-item" id="buy-items"><a href="#" class="nav-link btn-shop-menu">Items</a></li>
                                <li class="nav-item" id="buy-ships"><a href="#" class="nav-link btn-shop-menu">Ships</a></li>
                                <li class="nav-item" id="buy-goods"><a href="#" class="nav-link btn-shop-menu">Goods</a></li>
                            </ul>
                            <div class="shop-menu-note">
                                <!-- 
                                    Note: Upgrades do not stack and will be lost upon death!
                                    Note: If you purchase a ship, you will abandon your existing krew!
                                    No note for goods.
                                -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="krew-list modal">
                    <div class="modal-header">
                        <h4 class="modal-title">Krews docked at <span class="port-name"></span>:</h4>
                        <div class="btn btn-secondary btn-sm float-right toggle-krew-list-btn"><i class="icofont icofont-ui-close"></i></div>
                    </div>
                    <div class="modal-body">
                        <table>
                            <thead>
                                <tr>Clan</tr>
                                <tr>Name</tr>
                                <tr>Departure Time</tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="bank-menu modal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Welcome to the Bank at Labrador!</h4>
                            <div class="btn btn-secondary btn-sm float-right toggle-bank-menu-btn"><i class="icofont icofont-ui-close"></i></div>
                        </div>
                    </div>
                </div>

                <!-- Other Modals -->
                <div class="game-over-menu modal">
                    <div class="modal-dialog modal-md">
                        <div class="modal-content">
                            <h1>Game Over</h1>
                            <h6>Score: <span class="stats-score"></span></h6>
                            <h6>Supplies collected: <span class="stats-score"></span></h6>
                            <h6>Damage dealt: <span class="stats-score"></span></h6>
                            <h6>Shots (Accuracy): <span class="stats-shot-accuracy"></span> shots fired (<span class="stats-shot-accuracy"></span>% accuracy)</h6>
                            <h6>Ships sank: <span class="stats-ships-sank"></span></h6>
                        </div>
                        <button class="btn btn-primary respawn-btn">Respawn with <span class="remaining-supplies"></span> supplies.</button>
                    </div>
                </div>
                <div class="docking-modal absolute-center initial" style="display: none;">
                    <div class="btn btn-primary disabled btn-lg dock-btn">Countdown...</div>
                    <div class="btn btn-success btn-lg cancel-dock-btn">Sail (c)</div>
                </div>
                <div class="departure-modal absolute-center" style="display: none;">
                    <div class="btn btn-primary disabled btn-lg"><i class="icofont icofont-ship-wheel"></i> Departing in <span class="departure-timer">25</span> seconds.</div>
                </div>
            </div>
        </div>

