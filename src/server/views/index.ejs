        <audio id="fishing" src="/assets/audio/Fishing.wav"></audio>
        <audio id="get-crate" src="/assets/audio/Get Crate.wav"></audio>
        <audio id="deposit" src="/assets/audio/Deposit Money.wav"></audio>
