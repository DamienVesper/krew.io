        <audio id="cast-rod" src="/assets/audio/Cast Rod.wav"></audio>
        <audio id="catch-crab" src="/assets/audio/Catch Crab.wav"></audio>
        <audio id="catch-fish" src="/assets/audio/Catch Fish.wav"></audio>
