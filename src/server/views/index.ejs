        <audio id="island-music" src="/assets/audio/music - non ocean area loop.wav"></audio>
        <audio id="ocean-music" src="/assets/audio/music - ocean area loop.wav"></audio>
        <audio id="ocean-ambience" src="/assets/audio/Ocean Ambience Loop.wav"></audio>
