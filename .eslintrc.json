{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 6
    },
    "ignorePatterns": ["**/assets/js/*.js", "dist.min.js", "core_concatenated.js"],
    "rules": {
        "func-call-spacing": 0,
        "no-unexpected-multiline": 0,
        "eqeqeq": 0,
        "no-eval": 2,
        "array-bracket-newline": 1,
        "brace-style": 1,
        "camelcase": 1,
        "comma-spacing": 1,
        "no-var": 1,
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "semi": [2, "always"],
        "quotes": [2, "backtick", "avoid-escape"],
        "no-undef": 0,
        "no-unused-vars": 0,
        "prefer-const": 0,
        "no-mixed-operators": 0,
        "no-prototype-builtins": 0,
        "curly": 0,
        "prefer-arrow-callback": 1,
        "prefer-template": 1,
        "no-unreachable-loop": 0,
        "no-unused-expressions": 0,
        "no-useless-escape": 0
    }
}