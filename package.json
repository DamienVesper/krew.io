{
    "name": "booty",
    "version": "0.0.1",
    "scripts": {
        "dist-test": "grunt build-dist && cross-env NODE_ENV=\"dev\" node src/server/app.js",
        "server0": "grunt build-dist && cross-env NODE_ENV=\"production\" forever -o out-history_$(date +%F_%R).log -e err.log src/server/app.js --p=443",
        "ssl": "grunt build-dist && forever -o out.log -e err.log src/server/app.js --p=8080",
        "dev": "grunt build-dist && cross-env NODE_ENV=\"dev\" grunt dev",
        "test": "cross-env NODE_ENV=\"test\" grunt dev",
        "now-start": "cross-env NODE_ENV=\"test-server\" forever src/server/app-test-server.js",
        "watch": "cross-env NODE_ENV=\"test\" node-gc-viewer src/server/app.js"
    },
    "now": {
        "alias": "krewio",
        "files": [
            "core_concatenated.js",
            "dist",
            "src"
        ]
    },
    "devDependencies": {
        "grunt-concurrent": "^3.0.0",
        "grunt-contrib-watch": "^1.1.0",
        "grunt-nodemon": "^0.4.2",
        "optimist": "^0.6.1"
    },
    "dependencies": {
        "bad-words": "^3.0.3",
        "bcrypt": "^5.0.0",
        "cluster": "^0.7.7",
        "compression": "^1.7.4",
        "connect-flash": "^0.1.1",
        "connect-mongo": "^3.2.0",
        "cookie-parser": "^1.4.5",
        "cross-env": "^7.0.2",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.5",
        "express": "^4.17.1",
        "express-openid-connect": "^2.0.0",
        "express-session": "^1.17.1",
        "forever": "^3.0.2",
        "google-caja-sanitizer": "^1.0.4",
        "grunt": "^1.3.0",
        "grunt-anonymous": "^0.1.2",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-concat": "^1.0.1",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-uglify": "^5.0.0",
        "jsonwebtoken": "^8.5.1",
        "mongodb": "^3.6.3",
        "mongoose": "^5.10.13",
        "passport": "^0.4.1",
        "passport-auth0": "^1.4.0",
        "passport-facebook": "^3.0.0",
        "passport-local": "^1.0.0",
        "public-ip": "^4.0.2",
        "request": "^2.88.2",
        "rollbar": "^2.19.4",
        "socket.io": "^1.7.1",
        "striptags": "^3.1.1",
        "validator": "^13.1.17",
        "webhook-discord": "^3.7.7",
        "xss-filters": "^1.2.7"
    },
    "jscsConfig": {
        "preset": "airbnb",
        "requireSemicolons": true,
        "maximumLineLength": {
            "value": 180,
            "tabSize": 4,
            "comments": true
        },
        "disallowNewlineBeforeBlockStatements": true,
        "requireCurlyBraces": true,
        "validateIndentation": {
            "value": 4,
            "allExcept": [
                "emptyLines"
            ]
        },
        "requireCamelCaseOrUpperCaseIdentifiers": false,
        "validateLineBreaks": false
    }
}
